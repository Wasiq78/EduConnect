@model EduConnect.Models.HiringForm;

<head>
    <link rel="stylesheet" href="~/css/Hire.css" />
</head>

<form class="contianer hire-form" asp-controller="Home" asp-action="Hire" method="post">
    <div class="form-group">
        <label for="name">Name <span>*</span></label>
        <input type="text" asp-for="Name" placeholder="Enter Your Name">
        <span asp-validation-for="Name" style="color:red;"></span>

    </div>
    <div class="form-group">
        <label for="email">Email <span>*</span></label>
        <input type="email" asp-for="Email" placeholder="Enter Your Email">
        <span asp-validation-for="Email" style="color:red;"></span>

    </div>
    <div class="form-group">
        <label for="message">Tutor Code <span>*</span></label>
        <input type="text" asp-for="TutorCode" placeholder="Enter Tutor Code" />
        <span asp-validation-for="TutorCode" style="color:red;"></span>

    </div>
    <div class="form-group">
        <label for="message">Message <span>*</span></label>
        <textarea asp-for="Message" rows="7" placeholder="Enter Your Message Here (Optional)"></textarea>
        <span asp-validation-for="Message" style="color:red;"></span>

    </div>
    <div class="btn">
        <button>SUBMIT</button>
    </div>
</form>